.grid-33
  .app--section
    ul.app--user--list
      each friend in friends
        li
          .circle--fluid
            .circle--fluid--cell.circle-fluid--primary
              a.app--tweet--author(target = '_blank', href='https://twitter.com/' + friend.url)
                div.app--avatar(style= 'background-image: url('+ friend.photo + ')')
                  img(src= friend.photo)
                h4= friend.name
                a(target = '_blank', href='https://twitter.com/' + friend.url)= friend.url
            .circle--fluid--cell
              form(action='friendships/destroy', name='unfollow', value= friend.id)
                a.button.button-text(type='submit') Unfollow
